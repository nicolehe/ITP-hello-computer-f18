{
  "env": {
    "node": true,
    "es6": true
  },

  "extends": "eslint:recommended",
  "rules": {
    /* "indent": ["error", "tab"], */
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
